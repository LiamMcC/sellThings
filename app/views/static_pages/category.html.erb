<p id="notice"><%= notice %></p>

<% if @items.length == 0  %>
<br />
<h2>There are currently no products in this category</h2>
<% end %>




  <!-- Grid -->
  <div class="w3-row-padding" id="about">
   
    <div class="w3-center w3-padding-64">
      <span class="w3-xlarge w3-bottombar w3-border-dark-grey w3-padding-16">Products</span>
    </div>
<% @items.each do |item| %>
    <div class="w3-third w3-margin-bottom">
      <div class="w3-card-4">
       <%= link_to (image_tag item.image_url, :style => "width:100%"), item %>
        
        <div class="w3-container">
          <h3><%= item.title %></h3>
          <p class="w3-opacity">Brand: <%= item.brand %></p>
          <p><%= item.description %></p>
          <p><%= link_to 'Show',  item, :class => "w3-button w3-light-grey w3-block", :role => "button" %></p>
        </div>
      </div>
    </div>

    
<% end %>

</div>